    "upload": "aws s3 sync ./root/ s3://factorio-maps.rmdir.app-factorio-maps-v2 --delete",
    "download": "aws s3 sync s3://factorio-maps.rmdir.app-factorio-maps-v2 ./root/ --delete",
    "copy-mapshots": "rsync -av --ignore-existing '/Users/rmassaioli/Library/Application Support/factorio/script-output/mapshot/' ./root/"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "copyfiles": "^2.4.1",
